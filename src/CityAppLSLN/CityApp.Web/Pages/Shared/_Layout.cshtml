<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0"
          name="viewport" />
    <title>@ViewData["Title"] - City App</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link href="~/css/site.css"
          rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" 
                data-auto-replace-svg="nest"></script>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a asp-area=""
               asp-page="/Index"
               class="navbar-brand">
                My City
            </a>
            <button aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                    class="navbar-toggler"
                    data-target=".navbar-collapse"
                    data-toggle="collapse"
                    type="button">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a asp-area=""
                           asp-page="/Info/Index"
                           class="nav-link text-dark">
                            Basic information
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area=""
                           asp-page="/Info/News"
                           class="nav-link text-dark">
                            News
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area=""
                           asp-page="/Info/Stats"
                           class="nav-link text-dark">
                            Electricity stats
                        </a>
                    </li>
                </ul>
            </div>
            <form class="form-inline my-2 my-lg-0">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="font-weight-bolder mr-2">Welcome</span>
                    <a asp-page="/Account/Profile"
                       class="font-weight-bolder mr-1">
                        @User.Identity.Name
                    </a>
                    <i class="fas fa-angle-double-right"></i>
                    <a asp-page="/Account/Logout"
                       class="text-dark ml-1">
                        Logout
                    </a>
                }
                else
                {
                    <a asp-page="/Account/Login" class="font-weight-bolder">Login</a>
                }
            </form>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
            @if (IsSectionDefined("breadcrumb"))
            {
                <div class="row">
                    <div class="col-md-12">
                        <nav aria-label="breadcrumb" class="float-right">
                            @RenderSection("breadcrumb")
                        </nav>
                    </div>
                </div>
            }
            @RenderBody()
        </main>
</div>
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - My City
        <a asp-area=""
           asp-page="/Privacy">
            Privacy
        </a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>